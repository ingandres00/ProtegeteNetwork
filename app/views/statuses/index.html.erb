<div class="page-header">
  <h1>Todos los Comentarios</h1>
</div>

<%= link_to "Crear Post", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>

  <div class="status">
    <strong><%= status.user.apodo%> </strong>
    <p><%= status.contenido %></p>
    <div>
       <%= link_to "Hace "+ time_ago_in_words(status.created_at), status  %>
       <span class="admin">
          | <%= link_to "Editar", edit_status_path(status) %> |
         <%= link_to "Eliminar", status, method: :delete, data: { confirm: "¿Está seguro de eliminar este estado?" } %>
       </span>
    </div>
  </div>
<% end %>
